#!/bin/bash
set -e

# Resolve symlinks to get actual script location
SOURCE="${BASH_SOURCE[0]}"
while [[ -L "$SOURCE" ]]; do
    DIR="$(cd "$(dirname "$SOURCE")" && pwd)"
    SOURCE="$(readlink "$SOURCE")"
    [[ "$SOURCE" != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$(cd "$(dirname "$SOURCE")" && pwd)"
REPO_DIR="$(dirname "$SCRIPT_DIR")"

IMAGE_NAME="clorb"

# Check for Docker
if ! command -v docker &>/dev/null; then
    echo "Error: Docker is not installed."
    echo "Install OrbStack from: https://orbstack.dev"
    exit 1
fi

# Handle --rebuild flag
if [[ "$1" == "--rebuild" ]]; then
    echo "Rebuilding clorb image..."
    docker build -t "$IMAGE_NAME" "$REPO_DIR"
    exit 0
fi

# Parse flags
MOUNT_GH=false
while [[ "$1" == --* ]]; do
    case "$1" in
        --gh)
            MOUNT_GH=true
            shift
            ;;
        *)
            echo "Unknown flag: $1"
            exit 1
            ;;
    esac
done

# Require path argument
if [[ -z "$1" ]]; then
    echo "Usage: clorb [--gh] <path>"
    echo "       clorb --rebuild"
    exit 1
fi

# Resolve to absolute path
TARGET_PATH="$(cd "$1" && pwd)"

# Build image if it doesn't exist
if ! docker image inspect "$IMAGE_NAME" &>/dev/null; then
    echo "Building clorb image (first run only)..."
    docker build -t "$IMAGE_NAME" "$REPO_DIR"
fi

# Build docker run arguments
DOCKER_ARGS=(
    -it --rm
    -v "$TARGET_PATH:/workspace"
    -v "clorb-claude-config:/home/clorb/.claude"
    -v "$HOME/.gitconfig:/tmp/.gitconfig-host:ro"
    -w /workspace
)

if [[ "$MOUNT_GH" == true ]]; then
    DOCKER_ARGS+=(-v "$HOME/.config/gh:/home/clorb/.config/gh:ro")
fi

# Run Claude in container
docker run "${DOCKER_ARGS[@]}" "$IMAGE_NAME" --dangerously-skip-permissions
